<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/loginbackground">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/timer_mode_spinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_thin"
        android:textAlignment="center"
        android:layout_alignRight="@+id/timer_mode_imageview"
        android:layout_alignEnd="@+id/timer_mode_imageview"
        android:layout_alignLeft="@+id/timer_mode_imageview"
        android:layout_alignStart="@+id/timer_mode_imageview"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:entries="@array/timer_mode" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/timer_mode_imageview"
        android:layout_below="@+id/timer_mode_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/border" />
</RelativeLayout>