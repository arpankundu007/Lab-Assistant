<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/loginbackground"
    android:scrollbars="none">
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/opamp_relativeLayout"
        android:background="@drawable/border_thin"
        android:paddingRight="5dp"
        android:layout_below="@+id/timer_555"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton14"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/analog"
            android:src="@drawable/border_thin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="741 Operational Amplifier"
            android:id="@+id/textView38"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton14"
            android:layout_toEndOf="@+id/imageButton14"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:textColor="#666666" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select an analog component"
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#666666" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/timer_555"
            android:layout_below="@+id/textView39"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton18"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/timer_555"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="555 Timer"
                android:id="@+id/textView52"
                android:textSize="20dp"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton18"
                android:layout_toEndOf="@+id/imageButton18"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signal_generator_relativeLayout"
            android:background="@drawable/border_thin"
            android:paddingRight="5dp"
            android:layout_below="@+id/opamp_relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton15"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/sine"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Signal Generators"
                android:id="@+id/textView71"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton15"
                android:layout_toEndOf="@+id/imageButton15"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>