<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    android:padding="8dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/gate_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Gate Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#666666"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/gate_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/gate_name_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/border" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gate_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Truth Table"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#666666"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/gate_truth_table_imageview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/border" />

        <Button
            android:id="@+id/show_pin_diagram_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gate_truth_table_imageview"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:text="Show Pin-Outs"
            android:textColor="#666666" />

    </RelativeLayout>
</ScrollView>