<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="fill">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/first"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/second"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/first"
        android:layout_toRightOf="@+id/first"
        android:layout_toEndOf="@+id/first"
        android:layout_marginLeft="20dp"
        android:src="@drawable/border" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/third"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/second"
        android:layout_toRightOf="@+id/second"
        android:layout_toEndOf="@+id/second"
        android:layout_marginStart="20dp"
        android:src="@drawable/border" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fourth"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/third"
        android:layout_toRightOf="@+id/third"
        android:layout_toEndOf="@+id/third"
        android:layout_marginLeft="20dp"
        android:src="@drawable/border" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tolerance"
        android:background="#ffffff"
        android:layout_alignTop="@+id/fourth"
        android:layout_toRightOf="@+id/fourth"
        android:layout_toEndOf="@+id/fourth"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/border" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Resistance"
        android:id="@+id/show_resistance"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/second"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Specify the resistance colors below"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/line"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignBottom="@+id/second"
        android:layout_toRightOf="@+id/first"
        android:layout_toEndOf="@+id/first"
        android:layout_marginBottom="19dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line"
        android:layout_toRightOf="@+id/second"
        android:layout_toEndOf="@+id/second" />

    <View
        android:id="@+id/line3"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line2"
        android:layout_toRightOf="@+id/third"
        android:layout_toEndOf="@+id/third" />

    <View
        android:id="@+id/line4"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line3"
        android:layout_toRightOf="@+id/fourth"
        android:layout_toEndOf="@+id/fourth" />

    <View
        android:id="@+id/line5"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignBottom="@+id/converted_first"
        android:layout_toRightOf="@+id/converted_first"
        android:layout_toEndOf="@+id/converted_first"
        android:layout_marginBottom="19dp" />

    <View
        android:id="@+id/line6"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line5"
        android:layout_toLeftOf="@+id/converted_third"
        android:layout_toStartOf="@+id/converted_third" />

    <View
        android:id="@+id/line7"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line6"
        android:layout_toRightOf="@+id/converted_third"
        android:layout_toEndOf="@+id/converted_third" />

    <View
        android:id="@+id/line8"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="#8c8c8c"
        android:layout_alignTop="@+id/line7"
        android:layout_toLeftOf="@+id/converted_tolerance"
        android:layout_toStartOf="@+id/converted_tolerance" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resistance : "
        android:id="@+id/resistance_text_view"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/show_resistance"
        android:layout_toLeftOf="@+id/converted_third"
        android:layout_toStartOf="@+id/converted_third"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resistance_value"
        android:textSize="20dp"
        android:layout_alignTop="@+id/resistance_text_view"
        android:layout_toRightOf="@+id/resistance_text_view"
        android:layout_toEndOf="@+id/resistance_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Or enter reistance to get color code"
        android:id="@+id/textView4"
        android:layout_marginTop="65dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/resistance_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resistance:"
        android:id="@+id/enter_resistance"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/converted_first"
        android:layout_alignStart="@+id/converted_first"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:maxLength="5"
        android:layout_alignBottom="@+id/enter_resistance"
        android:layout_toRightOf="@+id/converted_second"
        android:layout_alignRight="@+id/converted_third"
        android:layout_alignEnd="@+id/converted_third" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ohms"
        android:id="@+id/ohms_text_view"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/resistance_conversion"
        android:layout_toEndOf="@+id/resistance_conversion"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/converted_first"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/enter_resistance"
        android:layout_alignLeft="@+id/first"
        android:layout_alignStart="@+id/first" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/converted_second"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_alignTop="@+id/converted_first"
        android:layout_toLeftOf="@+id/third"
        android:layout_toStartOf="@+id/third" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/converted_third"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_alignTop="@+id/converted_second"
        android:layout_toRightOf="@+id/line2"
        android:layout_toEndOf="@+id/line2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/converted_fourth"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_alignBottom="@+id/converted_third"
        android:layout_alignLeft="@+id/fourth"
        android:layout_alignStart="@+id/fourth" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/converted_tolerance"
        android:background="#ffffff"
        android:src="@drawable/border"
        android:layout_alignBottom="@+id/converted_fourth"
        android:layout_alignLeft="@+id/tolerance"
        android:layout_alignStart="@+id/tolerance" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Conversion Chart"
        android:padding="8dp"
        android:id="@+id/resistance_conversion"
        android:background="@drawable/border"
        android:layout_below="@+id/converted_third"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x 10"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/enter_resistance"
            android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText" />

        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/textView4"
            android:layout_above="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tolerance :"
            android:id="@+id/tolerance_textview"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/resistance_text_view"
            android:layout_alignStart="@+id/resistance_text_view"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tolerance_value"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/resistance_text_view"
            android:layout_toEndOf="@+id/resistance_text_view"
            android:textSize="20dp" />

    </RelativeLayout>

</ScrollView>