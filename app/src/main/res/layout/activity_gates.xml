<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:scrollbars="none">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/and_gate"
            android:background="@drawable/border_thin"
            android:layout_below="@+id/textView29"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/and_gate"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AND Gate"
                android:id="@+id/textView24"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="56dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/border_thin"
            android:id="@+id/or_gate"
            android:layout_below="@+id/and_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/border_thin"
                android:background="@drawable/or_gate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OR Gate"
                android:id="@+id/textView23"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:layout_marginLeft="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/xor_gate"
            android:layout_below="@+id/or_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/xor_gate"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XOR Gate"
                android:id="@+id/textView26"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton4"
                android:layout_toEndOf="@+id/imageButton4"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/nand_gate"
            android:layout_below="@+id/xor_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/nand_gate"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NAND Gate"
                android:id="@+id/textView25"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton3"
                android:layout_toEndOf="@+id/imageButton3"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/nor_gate"
            android:layout_below="@+id/nand_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/border_thin"
                android:background="@drawable/nor_gate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NOR Gate"
                android:id="@+id/textView28"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton6"
                android:layout_toEndOf="@+id/imageButton6"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/xnor_gate"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nor_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/border_thin"
                android:background="@drawable/xnor_gate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XNOR Gate"
                android:id="@+id/textView27"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton5"
                android:layout_toEndOf="@+id/imageButton5"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_thin"
            android:id="@+id/not_gate"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/xnor_gate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton16"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/not_gate"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NOT Gate"
                android:id="@+id/textView72"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton16"
                android:layout_toEndOf="@+id/imageButton16"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:textSize="22dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select a gate"
            android:id="@+id/textView29"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#666666" />
    </RelativeLayout>

</ScrollView>