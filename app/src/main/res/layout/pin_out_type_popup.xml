<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the type of chip"
        android:id="@+id/textView32"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#666666" />
    <RadioGroup android:id="@+id/chip_type_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/textView32"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_thin">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTL"
        android:id="@+id/ttl_radioButton"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#666666" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMOS"
        android:id="@+id/cmos_radioButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#666666" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/chip_type_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/chip_type_radiogroup"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:padding="8dp"
        android:textColor="#666666"
        android:layout_marginBottom="20dp" />
</RelativeLayout>