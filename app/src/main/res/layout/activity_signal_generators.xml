<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sine"
        android:background="@drawable/border_thin"
        android:paddingRight="5dp"
        android:layout_below="@+id/textView76"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/sine"
            android:src="@drawable/border_thin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sinusoidal Wave"
            android:id="@+id/textView73"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton7"
            android:layout_toEndOf="@+id/imageButton7"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:textColor="#666666" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/triangular"
        android:background="@drawable/border_thin"
        android:paddingRight="5dp"
        android:layout_below="@+id/sine"
        android:layout_alignLeft="@+id/sine"
        android:layout_alignStart="@+id/sine"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton17"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/triangular_wave"
            android:src="@drawable/border_thin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Triangular Wave"
            android:id="@+id/textView74"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton17"
            android:layout_toEndOf="@+id/imageButton17"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:textColor="#666666" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/square"
        android:background="@drawable/border_thin"
        android:paddingRight="5dp"
        android:layout_below="@+id/triangular"
        android:layout_alignLeft="@+id/triangular"
        android:layout_alignStart="@+id/triangular"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton19"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/square_wave"
            android:src="@drawable/border_thin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Square Wave"
            android:id="@+id/textView75"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton19"
            android:layout_toEndOf="@+id/imageButton19"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:textColor="#666666" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the wave type"
        android:id="@+id/textView76"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#666666" />
</RelativeLayout>