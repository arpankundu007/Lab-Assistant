<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LandingActivity"
    android:background="@drawable/loginbackground">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resistor_relativelayout"
            android:background="@drawable/border_thin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton8"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/resistor"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Resistance Calculator"
                android:id="@+id/textView6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton8"
                android:layout_toEndOf="@+id/imageButton8"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/capacitor_relativelayout"
            android:background="@drawable/border_thin"
            android:layout_below="@+id/resistor_relativelayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/capacitor"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Capacitance Calculator"
                android:id="@+id/textView7"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton9"
                android:layout_toEndOf="@+id/imageButton9"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inductor_relativeLayout"
            android:background="@drawable/border_thin"
            android:layout_below="@+id/capacitor_relativelayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/inductor"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Inductance Calculator"
                android:id="@+id/textView34"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton10"
                android:layout_toEndOf="@+id/imageButton10"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/digital_relativeLayout"
            android:background="@drawable/border_thin"
            android:layout_below="@+id/inductor_relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton11"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/digital"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Digital Components"
                android:id="@+id/textView35"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton11"
                android:layout_toEndOf="@+id/imageButton11"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/analog_relativeLayout"
            android:background="@drawable/border_thin"
            android:layout_below="@+id/digital_relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton13"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/analog"
                android:src="@drawable/border_thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Analog Components"
                android:id="@+id/textView37"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton13"
                android:layout_toEndOf="@+id/imageButton13"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textColor="#666666" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
